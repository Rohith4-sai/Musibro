# Spotify API Configuration
# Get these from https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_REDIRECT_URI=http://localhost:8501/callback

# Application Configuration
APP_NAME=Advanced Music Recommendation System
APP_VERSION=1.0.0
DEBUG=False
LOG_LEVEL=INFO

# Database Configuration (for future use)
DATABASE_URL=sqlite:///data/music_recommendations.db

# Cache Configuration
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000

# ML Model Configuration
MODEL_SAVE_PATH=models/
MODEL_RETRAIN_INTERVAL_HOURS=24
BATCH_SIZE=32
EPOCHS=50
LEARNING_RATE=0.001

# Recommendation System Parameters
DEFAULT_RECOMMENDATION_COUNT=20
DIVERSITY_WEIGHT=0.3
NOVELTY_WEIGHT=0.2
EXPLORATION_RATE=0.1
POPULARITY_BIAS_REDUCTION=0.5

# UI Configuration
THEME_COLOR=#667eea
MAX_SEARCH_RESULTS=50
AUTO_REFRESH_INTERVAL=30

# Performance Configuration
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT_SECONDS=30
MAX_MEMORY_USAGE_MB=1024

# Feature Flags
ENABLE_ADVANCED_ANALYTICS=True
ENABLE_REAL_TIME_RECOMMENDATIONS=True
ENABLE_BIAS_DETECTION=True
ENABLE_EXPERIMENTAL_FEATURES=False

# Security (for production)
SECRET_KEY=your_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# External Services (optional)
LAST_FM_API_KEY=your_lastfm_api_key_here
MUSICBRAINZ_USER_AGENT=YourApp/1.0.0

# Logging Configuration
LOG_FILE_PATH=logs/app.log
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=5

# Development Configuration
DEV_MODE=False
PROFILING_ENABLED=False
MOCK_SPOTIFY_API=False